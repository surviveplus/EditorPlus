<UserControl x:Class="Net.Surviveplus.EditorPlus.UI.TextFormat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="TextFormatToolWindow">
    <UserControl.Resources>
        <ResourceDictionary Source="Styles.xaml" />
    </UserControl.Resources> 
    <Grid>
        <StackPanel Orientation="Vertical" Margin="5,5,5,5">
            <Button x:Uid="formatButton" Name="formatButton"  Content="_Format" Click="formatButton_Click"  Width="100" Height="40" HorizontalAlignment="Left" BorderThickness="1" Margin="0,0,5,0" TabIndex="2"/>
        </StackPanel>
        <TextBox x:Uid="formatText"  x:Name="formatText" Margin="2,50,2,2" TextWrapping="NoWrap"  Text="// sample text - {0} - {1} - {2}" AcceptsTab="True" AcceptsReturn="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" TabIndex="1" />
    </Grid>
</UserControl>
