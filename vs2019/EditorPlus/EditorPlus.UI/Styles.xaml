<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Net.Surviveplus.EditorPlus.UI">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Styles/ButtonStyles.xaml" />
        <ResourceDictionary Source="Styles/CheckBoxStyles.xaml" />
        <ResourceDictionary Source="Styles/RadioButtonStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="Label">
        <Setter Property="Foreground" Value="{DynamicResource VsBrush.WindowText}" />
    </Style>
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{DynamicResource VsBrush.Window}" />
        <Setter Property="Foreground" Value="{DynamicResource VsBrush.WindowText}" />
    </Style>

</ResourceDictionary>